      },
      {
         "type": "image_picker",
         "id": "image1",
         "label": "First Image"
      },
      {
         "type": "image_picker",
         "id": "image2",
         "label": "Second Image"
      },
      {
         "type": "richtext",
         "id": "main-title",
         "label": "Main Title"
      },
      {
         "type": "image_picker",
         "id": "image3",
         "label": "Third Image"
      },
      {
         "type": "image_picker",
         "id": "image4",
         "label": "Fourth Image"
      },
      {
         "type": "text",
         "id": "upload_title",
         "label": "Upload Title"
      },
      {
         "type": "text",
         "id": "upload_subtitle",
         "label": "Upload Paragraph"
      },
      {
         "type": "image_picker",
         "id": "upload_image",
         "label": "Upload Image"
      }
    ],
    "presets": [
      {
        "name": "Upload Design First Section",
