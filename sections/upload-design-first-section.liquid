<div class="upload-desgin-first-main">
  <div class="page-width">
    <div class="back-btn">
      <a href="/products/design-your-own-product">‚Üê Go back</a>
    </div>
    <div class="inner-first">
      <div class="images">
        <div class="image-div">
          <img src="{{ section.settings.image1 | img_url: 'large'}}">
        </div>
        <div class="image-div">
          <img src="{{ section.settings.image2 | img_url: 'large'}}">
        </div>
      </div>
      <div class="text">
        {{ section.settings.main-title }} 
      </div>
      <div class="images">
        <div class="image-div">
          <img src="{{ section.settings.image3 | img_url: 'large'}}">
        </div>
        <div class="image-div">
          <img src="{{ section.settings.image4 | img_url: 'large'}}">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="free-quote">
  <div class="page-width">
    <div class="main-heading">
      <div class="title">
        <h2>{{ section.settings.upload_title }}</h2>
        <p>{{ section.settings.upload_subtitle }}</p>
      </div>
      <img src="{{ section.settings.upload_image | img_url: 'large'}}"/>
    </div>
    <div class="design-form">
      <div style="margin:0 auto;" class="pxFormGenerator" id="{{ section.settings.hulk-id }}"></div>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Upload first section",
