  {
    "name": "Featured Artist",
    "settings": [
      {
        "type": "collection_list",
        "id": "featured_collections",
        "label": "Select Featured Collections"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "collection_list",
        "id": "collections",
        "label": "Select Collections"
      }
    ],
     
    "presets": [
      {
        "name": "Featured Artist",
        "settings": {}
      }
    ]
  }
{% endschema %}

