<div class="global-wrapper">
  <div class="left-sec content">
    <img src="{{ section.settings.logo | img_url: "master" }}"/>
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
  </div>
  <div class="right-sec content">
    <img src="{{ section.settings.image | img_url: "master" }}"/>
  </div>
</div>

{% schema %}
  {
    "name": "We Are Global",
    "class": "global-sec",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Top Logo"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Paragraph"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Right Image"
      }
    ],
    "presets": [
      {
        "name": "We Are Global",
        "settings": {}
      }
    ]
  }
{% endschema %}

