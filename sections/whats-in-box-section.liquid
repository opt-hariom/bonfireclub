<div class="whats-in-box">
  <div class="page-width">
    <div class="whats-in-box_content">
      <div class="main_title">
        <h2 class="title">
          {{ section.settings.heading }}
        </h2>
      </div>
      <div class="box_blocks">
        <div class="content">
          {% for block in section.blocks %}
            {% case block.type %}
             {% when 'boxes' %}            
               <div class="box">
                  <div class="image">
                    <img data-class="LazyLoad" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img | img_url: 'large'}}">
                  </div>
                  <div class="text">
                    <h3>{{ block.settings.title }}</h3>
                  </div>
                </div>
             {% endcase %}
           {% endfor %}          
        </div>
      </div>
      {% if section.settings.para_text != blank %}
        <div class="bottm_text">
          <p>
            {{ section.settings.para_text }}
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Home Whats In Box",
    "class": "whats-in-box-section",
    "max_blocks": 16,
    "settings": [
      {
         "type": "text",
         "id": "heading",
         "label": "Main Heading"
       },
      {
         "type": "text",
         "id": "para_text",
         "label": "Bottom Description"
       }
    ],
    "blocks": [
     {
       "name": "Box Points",
       "type": "boxes",
       "settings": [
           {
              "type": "image_picker",
              "id": "img",
              "label": "Icon Image"
            },
           {
             "type": "text",
             "id": "title",
             "label": "Title"
           }           
       ]
     }
   ],
    "presets": [
      {
        "name": "Home Whats In Box",
        "settings": {}
      }
    ]
  }
{% endschema %}