<div class="page-width">
  <h2>{{ section.settings.heading }}</h2>
  <div class="topics-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'topic' %}
        <div class="topics">
          <a href="{{ block.settings.link }}">
            <h3>{{ block.settings.text }}</h3>
            <div class="icon">
              {% render 'next-icon' %}
            </div>
          </a>
        </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "All Topics",
    "class": "all-topic",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading"
      }
    ],
    "blocks": [
     {
       "name": "Topic",
       "type": "topic",
       "settings": [
           {
             "type": "url",
             "id": "link",
             "label": "Box Link"
           },
           {
              "type": "text",
              "id": "text",
              "label": "Box Heading"
           }
       ]
     }
   ],
    "presets": [
      {
        "name": "All Topics",
        "settings": {}
      }
    ]
  }
{% endschema %}

