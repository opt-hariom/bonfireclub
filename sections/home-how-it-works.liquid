<div class="how_it_works">
  <div class="page-width">
    <div class="how_it_works_content">
      <div class="main_title">
        <h2 class="title">
          {{ section.settings.heading }}
        </h2>
      </div>
      <div class="works_blocks">
        <div class="content">
          <div class="swiper slider-cards-js">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% case block.type %}
                {% when 'boxes' %} 
                  <div class="swiper-slide box mobile-width">
                    <div class="image">
                      <img data-class="LazyLoad" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img | img_url: 'large'}}">
                      <img class="hover" data-class="LazyLoad" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.gif_img | img_url: 'large'}}">
                    </div>
                    <div class="text">
                      <h3>{{ block.settings.title }}</h3>
                      <p>{{ block.settings.para }}</p>
                    </div>
                  </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="lazyload_js">
$(document).ready(function() { 
  var init = false;
  var swiper;
  function swiperCard() {
    if (window.innerWidth <= 768) {
      if (!init) {
        init = true;
        swiper = new Swiper(".slider-cards-js", {
          slidesPerView: 'auto',
          centeredSlides: false,
          spaceBetween: 16,
          freeMode: true,
        });
      }
    } else if (init) {
      swiper.destroy();
      init = false;
    }
  }
  swiperCard();
  window.addEventListener("resize", swiperCard);
});
</script>

{% schema %}
  {
    "name": "Home How it Works",
    "class": "how-it-work-section",
    "max_blocks": 4,
    "settings": [
      {
         "type": "text",
         "id": "heading",
         "label": "Main Heading"
       }
    ],
    "blocks": [
     {
       "name": "Started Points",
       "type": "boxes",
       "settings": [
           {
              "type": "image_picker",
              "id": "img",
              "label": "Icon Image"
           },
           {
              "type": "image_picker",
              "id": "gif_img",
              "label": "Icon Gif"
            },
           {
             "type": "text",
             "id": "title",
             "label": "Title"
           },
           {
             "type": "text",
             "id": "para",
             "label": "Detail"
           }
       ]
     }
   ],
    "presets": [
      {
        "name": "Home How it Works",
        "settings": {}
      }
    ]
  }
{% endschema %}